<div style="text-align: center; margin-top:20px;">
  <%= form_tag request.fullpath, :method => :get, :class => 'form-inline' do %>
    <label class="checkbox">
      <%= check_box_tag :include_periodicals, '1', params[:include_periodicals] == '1' %> Include periodicals in browsing (will reset browse page)
    </label>
    <noscript>&nbsp;<input type="submit" value="Submit" class="btn"/></noscript>
  <% end %>
</div>
